#ifndef NIRVANA_BINDERROR_IDL_
#define NIRVANA_BINDERROR_IDL_

module Nirvana {

/// Computational platform identifier.
typedef unsigned short PlatformId;

typedef long ModuleId;

module BindError {

enum Type
{
	ERR_TEXT,
	ERR_OBJ_NOT_FOUND,
	ERR_ITF_NOT_FOUND,
	ERR_MODULE_LOAD,
	ERR_SYSTEM,
	ERR_UNSUP_PLATFORM
};

struct ItfInfo
{
	string obj_name;
	string itf_id;
};

struct ModInfo
{
	ModuleId module_id;
	PlatformId platform;
};

union Info switch (Type) {
case ERR_TEXT:
	string message;
case ERR_OBJ_NOT_FOUND:
	string obj_name;
case ERR_ITF_NOT_FOUND:
	ItfInfo itf_info;
case ERR_MODULE_LOAD:
	ModInfo mod_info;
case ERR_SYSTEM:
	any system_exception;
case ERR_UNSUP_PLATFORM:
	unsigned short platform_id;
};

exception Error {
	Info info;
	sequence <Info> stack;
};

};
};

#endif
